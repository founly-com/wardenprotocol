{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "outDir": "dist",
    "composite": true
  },
  "include": [
    "src",
    "contracts/solana/target/types/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
  ],
  "compileOnSave": true
}